  script(src="/js/models.js")
  script(src="/js/collections.js")
  script(src="/js/views.js")
  script(src="/js/routes.js")
  script(src="/js/app.js")

  // inline scripts for bootstrapping models
  script
    | JaagaDemoVote.User = 
    != userInfo
    |;